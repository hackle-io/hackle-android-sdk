<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">

    <TextView
        android:id="@+id/hackle_experiment_ab_test_tab"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@color/hackle_white"
        android:gravity="center"
        android:text="@string/hackle_label_ab_test"
        android:textColor="@color/hackle_primary_text_light_disable_only"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/hackle_experiment_feature_flag_tab"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@color/hackle_white"
        android:gravity="center"
        android:text="@string/hackle_label_feature_flag"
        android:textColor="@color/hackle_primary_text_light_disable_only"
        android:textSize="16dp" />
</LinearLayout>

